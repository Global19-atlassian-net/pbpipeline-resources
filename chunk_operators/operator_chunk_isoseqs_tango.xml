<?xml version="1.0" encoding="utf-8" ?>
<chunk-operator id="pbsmrtpipe.operators.chunk_isoseqs_tango">

    <task-id>isoseqs.tasks.tango</task-id>

    <scatter>
        <scatter-task-id>pbcoretools.tasks.scatter_transcripts</scatter-task-id>
        <chunks>
            <chunk out="$chunk.transcriptset_id" in="isoseqs.tasks.tango:0"/>
            <chunk out="$chunk.subreadset_id" in="isoseqs.tasks.tango:1" />
        </chunks>
    </scatter>
    <!-- Define the Gather Mechanism -->
    <gather>
        <chunks>
            <chunk>
                <gather-task-id>pbcoretools.tasks.gather_transcripts</gather-task-id>
                <chunk-key>$chunk.transcriptset_id</chunk-key>
                <task-output>isoseqs.tasks.tango:0</task-output>
            </chunk>
        </chunks>
    </gather>
</chunk-operator>